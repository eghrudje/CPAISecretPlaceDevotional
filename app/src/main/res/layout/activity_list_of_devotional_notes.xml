<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLayoutId"
    tools:context="ui.ListOfDevotionalNotesActivity">

    <EditText
        android:id="@+id/searchDevotionalNoteId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search..."
        android:textSize="20sp"
        android:background="@drawable/search_edit_textview"
        android:drawableLeft="@drawable/ic_search"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:id="@+id/noteInfoID"
        android:text="Your notes taken during each devotion will show here."
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOfDevotionalNotesId"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp" />

</LinearLayout>